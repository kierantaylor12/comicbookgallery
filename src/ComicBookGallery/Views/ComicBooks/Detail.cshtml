@{
    Layout = null; // templates set in the layout view
    var seriesTitle = "The Amazing Spider-Man";
    var issueNumber = 700;
    var description = "<p> Final issue, witness the..!</p>";
    var artists = new string[]
    {
        "Script: Dan Slott",
        "Pencils: Humberto Ramos",
        "Inks: Victor Olazaba",
        "Colors: Edgar Delgado",
        "Letters: Chris Eliopoulos"
    };
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
    <h1>@seriesTitle</h1>
    <h2>Issue number: @issueNumber</h2>

        <h5>Description:</h5>
        <div>@Html.Raw(description)</div>

        @if (artists.Length > 0)
        {
        <h5>Artists:</h5>
        <div><ul>@foreach (var artist in artists)
        {
            <li>
            @artist
                </li>
        }</ul>
        </div>
        }
    </div>
</body>
</html>
